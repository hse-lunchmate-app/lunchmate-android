<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background">

    <ImageView
        android:id="@+id/rect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/bottom_sheet_rect" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rect"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="28dp"
        android:text="Среда, 21 февр. 2024г."
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/timeSetter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="36dp">

        <ImageView
            android:id="@+id/clockIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/clock" />

        <EditText
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="28dp"
            android:layout_toEndOf="@id/clockIcon"
            android:background="@drawable/rounded_dark_grey"
            android:inputType="time"
            android:paddingVertical="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="28dp"
            android:hint="XX:XX"
            android:textSize="16sp"
            android:maxLength="5"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:nextFocusRight="@id/finish"
            />

        <ImageView
            android:id="@+id/dashIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/start"
            android:src="@drawable/dash" />

        <EditText
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/dashIcon"
            android:background="@drawable/rounded_dark_grey"
            android:inputType="time"
            android:paddingVertical="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="28dp"
            android:hint="XX:XX"
            android:textSize="16sp"
            android:maxLength="5"
            android:maxLines="1"
            android:imeOptions="actionPrevious"
            android:nextFocusRight="@id/start"/>

    </RelativeLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchIsRepeating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeSetter"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:layoutDirection="rtl"
        android:text="Повторять еженедельно"
        android:textSize="16sp"
        android:textIsSelectable="true"
        app:switchPadding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/switchIsRepeating"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deleteBtn"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_red_stroke"
            android:text="Удалить"
            android:textAllCaps="false"
            android:textColor="@color/red_700" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveBtn"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_yellow"
            android:text="Сохранить"
            android:textAllCaps="false"
            android:textColor="@color/black" />

    </LinearLayout>

</RelativeLayout>